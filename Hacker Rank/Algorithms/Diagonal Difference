#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main(){
    int n;
    cin >> n;
    vector< vector<int> > a(n,vector<int>(n));
    for(int a_i = 0;a_i < n;a_i++){
       for(int a_j = 0;a_j < n;a_j++){
          cin >> a[a_i][a_j];
       }
    }
    int sum_1 = 0, sum_2 = 0, a_j;
    for(int a_i = 0;a_i < n;a_i++){
        a_j = a_i;
        sum_1 += a[a_i][a_j];               
    }
    for (int a_i = 0; a_i < n; a_i++){
        a_j = n - 1 - a_i;
        sum_2 += a[a_i][a_j];
    }
    //cout << sum_1 << sum_2;
    cout << abs(sum_1-sum_2);
    return 0;
}
